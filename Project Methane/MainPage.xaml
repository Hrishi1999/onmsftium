                <StackPanel>
                <TextBlock TextWrapping="Wrap" Name="Description1" Width="300"/>
                    <TextBlock Name="Date1" Foreground="#FF2186FF" Margin="0,5,0,0"/>

                </StackPanel>
            </StackPanel> 
            <Image Stretch="UniformToFill" Source="Assets/crumpled-white-paper-texture-melemel-jpeg_260159.jpg" Margin="0,5,5,0" Grid.Row="1"/>
          
        </Grid>

        <GridView x:Name="FeedListView" Margin="0,10,0,0" ScrollViewer.VerticalScrollMode="Enabled"
              ItemsSource="{Binding Path=Result}" SelectionChanged="SelectionChanged" ShowsScrollingPlaceholders="False" BorderThickness="0"   BorderBrush="#FFE0E0E0" ScrollViewer.VerticalScrollBarVisibility="Visible" Background="White" HorizontalAlignment="Center" Grid.Row="4" Grid.ColumnSpan="2" Padding="0" >
            <GridView.Foreground>
                <SolidColorBrush Color="White"/>
            </GridView.Foreground>

            <GridView.ItemTemplate>
                <DataTemplate>
                    <StackPanel  Background="{x:Null}"  BorderBrush="{x:Null}" BorderThickness="0" Margin="7.5" HorizontalAlignment="Left" Width="300" >
                        <Image Width="300" Height="200" Stretch="UniformToFill" VerticalAlignment="Stretch" HorizontalAlignment="Left" Margin="0,0,0,3" Source="{Binding Path=thumbnail}"/>


                        <TextBlock   Text="{Binding Path=title}" MaxLines="2"
                         FontSize="17.333" TextWrapping="Wrap" Margin="0,5,0,0"  HorizontalAlignment="Left" FontWeight="Normal" FontFamily="Segoe UI" SelectionHighlightColor="#FF4BD2F9" Width="Auto" Foreground="Black"   />


                        <TextBlock Text="{Binding Path=date}" FontSize="13.333" Margin="0,5,0,0" SelectionHighlightColor="{x:Null}" VerticalAlignment="Stretch" FontFamily="Segoe UI" HorizontalAlignment="Left" >
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="#FF2186FF"/>
                            </TextBlock.Foreground>
                        </TextBlock>



                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>


        </GridView>

